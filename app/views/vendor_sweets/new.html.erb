<h1>Create New Brand</h1>

<% if flash[:errors]%>
    <%flash[:errors].each do |error|%>
        <p><%= error %></p>
    <%end%>
<%end%>

<%= form_for @vendor_sweet, :url =>{:action => "create", :id =>@vendor_sweet} do |f| %>


<p>Vendor: <%= f.collection_select :vendor_id, Vendor.all, :id, :name %></p>

<p>Sweet: <%= f.collection_select :sweet_id, Sweet.all, :id, :name %></p>

<<p><label for = "vendor_sweet_price">Price</label>:
<%= text_field 'vendor_sweets', 'price' %></p>

<%= f.submit "Save changes" %>
<%end%>
