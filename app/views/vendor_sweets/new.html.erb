<h1>Connect Vendor with Sweets(s)</h1> <br>

<% if flash[:errors] %>
    <h2><%= flash[:errors][0] %></h2>
<% end %>

<%= form_for @vendor_sweet do |f| %>
<%= f.label :vendor_id %>
<%= f.collection_select :vendor_id, Vendor.all, :id, :name%>
<%= f.label :instrumsweet_ident_id %>
<%= f.collection_select :sweet_id, Sweet.all, :id, :name%>
<%= f.label :price %>
<%= f.text_field :price %>
<%= f.submit %>
<% end %>