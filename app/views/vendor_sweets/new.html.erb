<h1>Create a Vendor Sweet Relationship</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p><%= error %></p>
    <% end %>
<% end %>

<%= form_for @vendor_sweet do |f| %>

    <%= f.label :vendor_id, "Choose Vendor" %>
    <%= f.collection_select :vendor_id, @vendors, :id, :name %>

    <%= f.label :sweet_id, "Choose a Sweet" %>
    <%= f.collection_select :sweet, @sweets, :id, :name %>

    <%= f.label :price, "Create a Price" %>
    <%= f.number_field :price %>

    <%= f.submit %>

<% end %>

