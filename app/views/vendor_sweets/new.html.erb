<h1>Create a new vendor sweet relationship</h1>

<% if flash[:errors] %>
<% flash[:errors].each do |e| %>
<%= e %>
<% end %>
<% end %>

<%= form_for @vs do |f| %>
<%= f.label :sweet_id, "Sweet" %>
<%= collection_select(:vendor_sweet, :sweet_id, Sweet.all, :id, :name) %>
<%= f.label :vendor, "Vendor" %>
<%= collection_select(:vendor_sweet, :vendor_id, Vendor.all, :id, :name) %>
<%= f.label :price, "Price:" %>
<%= f.number_field :price %>
<%= f.submit %>
<% end %>