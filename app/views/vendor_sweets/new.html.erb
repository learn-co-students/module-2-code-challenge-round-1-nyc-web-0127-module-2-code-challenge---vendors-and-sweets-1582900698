<h1>Create New VendorSweet Connection!</h1>
<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
<% end %>



<%= form_for @vendor_sweet do |f| %>
    <%= f.collection_select :vendor_id, @vendors, :id, :name, prompt: "Select A Vendor"%>
    <%= f.collection_select :sweet_id, @sweets, :id, :name, prompt: "Select A Sweet"%> <br> <br>
    <%= f.label "Price:" %>
    <%= f.number_field :price %> <br> <br>
    <%= f.submit %>
<% end %>